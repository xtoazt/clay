{
  "name": "clay-terminal",
  "version": "1.0.0",
  "description": "Clay - A beautiful terminal built with Electron",
  "main": "dist/src/main.js",
  "scripts": {
    "build": "tsc && npm run copy-files",
    "copy-files": "node -e \"const fs=require('fs');const path=require('path');fs.mkdirSync('dist/renderer',{recursive:true});fs.copyFileSync('renderer/index.html','dist/renderer/index.html');fs.copyFileSync('renderer/styles.css','dist/renderer/styles.css');\"",
    "start": "npm run build && electron .",
    "dev": "npm run copy-files && tsc && electron .",
    "watch": "tsc --watch"
  },
  "keywords": ["electron", "terminal", "shell"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "typescript": "^5.3.3"
  }
}

